# DesktopAgent Environment Settings
# このファイルを.envにコピーし、適切な設定を行ってください

# MCPサーバー設定
USE_MCP=true  # MCPサーバーを使用するかどうか
MCP_HOST=localhost  # MCPサーバーのホスト
MCP_PORT=8765  # MCPサーバーのポート

# APIキー設定
OPENAI_API_KEY=  # OpenAI APIキー
ANTHROPIC_API_KEY=  # Anthropic APIキー
GOOGLE_API_KEY=  # Google AI Studio APIキー

# モデル設定
DEFAULT_MODEL=gemini-pro  # デフォルトで使用するモデル
FALLBACK_MODEL=gpt-3.5-turbo  # フォールバックモデル

# ロギング設定
LOG_LEVEL=INFO  # ログレベル (DEBUG, INFO, WARNING, ERROR)

# ブラウザ設定
BROWSER_PATH=  # ブラウザの実行ファイルへのパス（省略時は自動検出）
BROWSER_TIMEOUT=30  # ブラウザ操作のタイムアウト（秒）
HEADLESS=false  # ヘッドレスモードで実行するかどうか 